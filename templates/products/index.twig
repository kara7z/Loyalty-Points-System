{% extends "layouts/base.twig" %}
{% block title %}Products{% endblock %}
{% block content %}
<div class="stack">
  <div class="card">
    <div class="h1">Products</div>
    <div class="muted">Add items to cart → checkout → earn points automatically (10 pts / 100$).</div>
  </div>

  <div class="grid">
    {% for p in products %}
      <div class="card product">
        <img class="product-img" src="{{ p.image }}" alt="{{ p.name }}" loading="lazy">
        <div class="product-body">
          <div class="row">
            <strong>{{ p.name }}</strong>
            <span class="kpi">Stock: {{ p.stock }}</span>
          </div>
          <div class="muted small">{{ p.description }}</div>

          <div class="row" style="margin-top:10px;">
            <span class="price">${{ p.price }}</span>
            <form method="post" action="/cart/add/{{ p.id }}" class="row" style="gap:8px;">
              <input name="qty" type="number" value="1" min="1" style="width:90px;">
              <button class="btn" type="submit">Add</button>
            </form>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
