{% extends "layouts/base.twig" %}
{% block title %}Dashboard{% endblock %}
{% block content %}
<div class="stack">
  <div class="card">
    <div class="h1">Dashboard</div>
    <div class="muted">Welcome <strong>{{ user.name|default('User')|capitalize }}</strong></div>

    <div class="hr"></div>

    <div class="row">
      <div class="price">{{ user.total_points }} points</div>
      <span class="kpi">Loyalty balance</span>
    </div>

    <p class="muted small" style="margin-top:10px;">
      Tip: checkout to earn points automatically, then redeem rewards.
    </p>
  </div>
</div>
{% endblock %}
